{
  "name": "taski",
  "version": "1.0.0",
  "description": "Simple Electron ToDo app",
  "author": "Sophie Pham phamsophie10@gmail.com",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "pack:mac": "npm run build && electron-builder -m",
    "pack:win": "npm run build && electron-builder -w"
  },
  "build": {
    "appId": "com.todo",
    "productName": "Taski",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "index.html",
      "style.css",
      "theme-button-images/theme-blue.png",
      "theme-button-images/theme-pink.png",
      "theme-button-images/theme-green.png"
    ],
    "asar": true,
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity",
      "icon": "app-icon.icns"
    }
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12",
    "typescript": "^5.9.2"
  },
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Uye3n/Taski.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Uye3n/ToDo/issues"
  },
  "homepage": "https://github.com/Uye3n/ToDo#readme"
}
